.\""""""""""""""""""""""""""""""""""""""
.\" u-pdf handle pdf metadatas and links
.
.nr tmac-u-pdf 1
.\""""""""""""""""""""""""""""""""""""""
.\"	Pdf metadata
.de DT
.	ds pdf-title \\$*
..
.de DA
.	ds pdf-author \\$*
..
.de DS
.	ds pdf-subject \\$*
..
.de DK
.	ds pdf-keywords \\$*
..
.de pdf:data
.	ds pdf-data [ /Creator (Neatroff Utmac)
.	if !"\\*[pdf-title]"" .as pdf-data " /Title (\\*[pdf-title])
.	if !"\\*[pdf-author]"" .as pdf-data " /Author (\\*[pdf-author])
.	if !"\\*[pdf-subject]"" .as pdf-data " /Subject (\\*[pdf-subject])
.	if !"\\*[pdf-keywords]"" .as pdf-data " /Keywords (\\*[pdf-keywords])
.	var:print \X"ps \\*[pdf-data] /DOCINFO pdfmark"
.	sp -1v
..
.\""""""""""""""""""""""""""""""""""""""
.\" PDF strings and macros
.
.
.de pdf:bookmark
.	\" $1 head level
.	\" $2 Text to print on the pdf internal toc
.	if \\n[pdf-firsthead]==0 \{\
.		nr pdf-firsthead \\$1
.	\}
.	nr pdf-level \\$1-\\n[pdf-firsthead]
.	var:print \X"ps [ /Title (\\$2) /Count (\\n[pdf-level]) /OUT pdfmark"\\c
.	rr pdf-level
..
.de pdf:anchor
.	\" $1 anchor
.	\" $2 string after
.	\" $3 string before
.	var:print \\$3\X"ps [ /Dest /\\$1 /DEST pdfmark"\\$2
..
.de pdf:linker
.	\" $1 anchor to link to
.	\" $2 text
.	\" $3 string after
.	\" $4 string before
.	nr pdf-linkv \\n(.sp
.	ie \\n(.$>1 .nr pdf-linkh \\w'\\$2'
.	el .nr pdf-linkh \\w'\\$1'
\\$4\v'+\\n(.sp*2u/10u'\
\X'link "\\$1" \\n[pdf-linkh] -\\n[pdf-linkv] /Border [0 0 0] /Color [1 1 1]'\
\v'-\\n(.sp*2u/10u'\
\\?"\\n(.$>1#\\$2#\\$1"\\$3
..
.de pdf:link
.	\" $1 url
.	\" $2 text
.	\" $3 string after
.	\" $4 string before
.	pdf:linker "#\\$1" "\\$2" "\\$3" "\\$4"
..
.de pdf:url
.	\" $1 url
.	\" $2 text
.	\" $3 string after
.	\" $4 string before
.	pdf:linker "\\$1" "\\$2" "\\$3" "\\$4"
..
.de pdf:mail
.	\" $1 mail address
.	\" $2 text
.	\" $3 string after
.	\" $4 string before
.	pdf:linker "mailto:\\$1" "\\$2" "\\$3" "\\$4"
..
