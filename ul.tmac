.\" default variables
.nr tmac-ul 1
.nr page-head 3
.nr page-foot 60 \" 44
.nr page-box 2 \"\n[page-foot]+4
.nr text-offset 6.5c
.nr text-offset-e 6.5c
.nr text-length 12c
.nr text-hyphen 14
.nr text-font 10p
.nr text-line 13p \" change page-foot if you change this!
.nr addr-offset 14c
.nr addr-length 4.5c
.nr addr-line 10
.nr note-offset 1.5c
.nr note-offset-e \n[note-offset]u
.nr note-length 5c-1v
.nr note-blank 1c
.nr note-hyphen \n[text-hyphen]
.nr note-font 9p
.nr note-line \n[text-line]u
.nr list-offset 1.5c
.nr list-length 5c-1v
.nr box-offset \n[text-offset]u\"+\n[text-length]u
.nr box-length \n[text-length]u\"4c
.nr var-orphan \n[page-head]+1
.nr var-widow \n[page-foot]-2
.nr var-blank \n[page-foot]-1
.papersize a4
.mediasize a4
.padj
.\""""""""""""""""""""""""""""""""""""""
.\" Document
.de doc:start
.	\" start document
.	par:doc
.	em doc:end
.	pdf:data
.	\" begin first page
.	wh 0 page:head
.	page:head
..
.de doc:end
.	\" end document
.	br
.	if d note:div .note:head
.	pdf:data
..
.\""""""""""""""""""""""""""""""""""""""
.\" Page
.de page:head
.	\" put a vacuum header
.	\" print diverted note
.	ch page:head
.	par:doc
.	\"sp |\\n[page-head]v
.	note:head
.	sp |\\n[page-head]v
.	ns
.	po \\n[text-offset]u
.	if \\n(RV=1 .if e .po \\n[text-offset-e]u
.	wh \\n[page-foot]v page:foot
.	wh 0 page:head
..
.de page:foot
.	\" print footer
.	\"ch page:foot
.	note:foot
.	var:todo code:foot
.	ev ev-foot
.	br
.	if \\n%=1 .if d data:write .data:write
.	par:doc
.	br
.	\"page:box
.	bp
.	ns
.	ev
.	var:todo code:init
..
.ds page-title-tmp
.de page:boxeven
.	ie !"\\*[page-title-tmp]"" \{\
.		tl "\\*[page-title-tmp]"""
.		rm page-title-tmp
.	\}
.	el .tl "\\*[page-title]"""
..
.de page:boxodd
.	ie !"\\*[page-title-tmp]"" \{\
.		tl """\\*[page-title-tmp]"
.		rm page-title-tmp
.	\}
.	el .tl """\\*[page-title]"
..
.de page:box
.	ev ev-box
.	par:doc
.	in 0
.	po \\n[box-offset]u
.	lt \\n[box-length]u
.	ie !"\\*[page-title-tmp]"" \
.		tl ""\\*I\\*[page-title-tmp]\\*I""
.	el .tl ""\\*I\\*[page-title]\\*I""
.	ev
..
.de page:num
.	\" get real page number in padj mode
.	nr page-num \\n%
..
.\""""""""""""""""""""""""""""""""""""""
.\" Paragraphs
.de par:doc
