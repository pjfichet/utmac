.	font:text
.	typo:text
..
.de par:init
.	var:start
.	par:doc
..
.de par:start
.	nr note-in 0
.	br
.	if \\n[note-last]u>=\\n(nlu .sp 1v
.	par:init
.	var:layout
.	po \\n[text-offset]u
.	nr last-note \\n(nlu
..
