.nr data-u-idx 1
.\"""""""""""""""""""""""""""""""""""""""""""""""
.\" idx: inline and index macros
.
.\" trap number
.nr idx-trap 0 1
.
.de idx:do
.	\" use a trap to get real page number
.	\" $1 key, $n words
.	de idx:\\n+[idx-trap]
.		\" add the trap number to args
.		\" to delete the trap later
.		idx:rec \\$*
\\..
.	var:print \\P[idx:\\n[idx-trap]]\\c
..
.de idx:rec
.	\" record the page number
.	\" $1 key, $n words
.	\" idx-keys: list of keys
.	lds idx-key \\$1
.	shift 1
.	if !d idx:\\*[idx-key] .as idx-keys \\*[idx-key] \"
.	am idx:\\*[idx-key]
\\*[idx-key]> \\$*:: \\n%
\\..
..
.de idx:del
.	\" delete called macro
.	\" TODO: find place to put this
.	\" (not before diverted notes are printed)
.	if \\n[idx-trap]>0 \{\
.		while \\n-[idx-trap]>0 \{\
.			if d idx:\\n[idx-trap] .rm idx:\\n[idx-trap]
.		\}
.	\}
.	nr idx-trap 0 1
..
.de idx:writem
.	\" write macro for each arg
.	while \\n(.$ \{\
.		writem idx-f idx:\\$1
.		shift
.	\}
..
.de XI
.	\" print index
.	\" $n: keys of index to print
.	\" print all indexes by default.
.	open idx-f \\*[data-file]-idx.idx
.	ie \\n(.$>0 .idx:writem \\$*
.	el .idx:writem \\*[idx-keys]
.	close idx-f
.	\" delete EOF = \004 in octal = ^D in vim
.	\" .pso need \\\\004, .sy need \\004
.	pso idx -d \\*[data-file]-idx.idx
..
.\""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
.de idx:par
.	br
.	par:init
.	in 3v
.	ti 0
..
.\" Default macros
.nr idx-args 0
.de LP
.	\" text to print
.	ds idx-text \\$1
.	ds idx-end \\$2
.	ds idx-beg \\$3
.	nr idx-args \\n(.$
..
.de idx:print
.	\" print text defined by .p macro
.	\" $1 before, $2 after
.	if \\n[idx-args]=1 .var:print \\*[idx-text]
.	if \\n[idx-args]=2 .var:print \\*[idx-text]\\*[idx-end]
.	if \\n[idx-args]>2 .var:print \\*[idx-beg]\\*[idx-text]\\*[idx-end]
.	rm idx-text
.	rm idx-beg
.	rm idx-end
.	nr idx-args 0
..
.de idx:build
.	\" build macros
.	de L\\$1
.		\" index words
.		idx:do \\$1 \\\\$@
.		idx:print
\\..
.	de \\$1<
.		\" print index title
.		H3 \\$2
.		H* \\$2
.		H0 \\$2
.		sp 1v
\\..
.	de \\$1>
.		\" print words and list of pages
.		idx:par
.		ie \\n(.$=5 \{\
.			lds idx-s \\\\$1
.			shift
.			ie \\\\n(.$=0 .var:print "\\$3\\\\*[idx-s]\\$4:"
.			el .var:print "\\$3\\\\*[idx-s]\\$4, \\\\$*:"
.		\}
.		el .var:print "\\$3\\\\$*\\$4:"
.		var:print \\\\*(<P.
\\..
..
.\" Acronym, command, date, error, image,
.\" link, email, name, object, quotation,
.\" url, word.
.idx:build A "\\\\*[lang-Idxa]" \\\\*A \\\\*P 1
.\"idx:build C "\\\\*[lang-Idxc]"
.\"idx:build D "\\\\*[lang-Idxd]"
.\"idx:build E "\\\\*[lang-Idxe]"
.\"idx:build I "\\\\*[lang-Idxi]"
.\"idx:build L "\\\\*[lang-Idxl]"
.\"idx:build M "\\\\*[lang-Idxm]"
.\"idx:build N "\\\\*[lang-Idxn]" \\\\*C \\\\*P 1
.idx:build O "\\\\*[lang-Idxo]" \" objets
.\"idx:build Q "\\\\*[lang-Idxq]" « »
.idx:build T "\\\\*[lang-Idxt]" \\\\*I \\\\*P
.\"idx:build U "\\\\*[lang-Idxu]"
.idx:build W "\\\\*[lang-Idxw]"
.
.
.\""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
.\" Special formatting
.
.\" name: reverse lastname before indexing
.de N<
.	\" print index title
.	H3 \\*[lang-Idxn]
.	H* \\*[lang-Idxn]
.	H0 \\*[lang-Idxn]
.	sp 1v
..
.de LN
.	\" input: firstname lastname, jr
.	\" output: lastname, firstname jr
.   lnr N-pre \\n(.$-1
.   lds N-firstname \\$\\n[N-pre]
.   lds N-comma \\*[N-firstname]
.   substring N-comma -1 -1
.   ie "\\*[N-comma]"," \{\
.       lds N-jr \\$\\n(.$
.       chop N-firstname
.   \}
.   el \{\
.       lds N-firstname \\$\\n(.$
.       lnr N-pre \\n(.$
.   \}
.   if \\n(.$>1 .as N-firstname ,
.   lnr i 0 1
.   while \\n+i<\\n[N-pre] \{\
.       as N-firstname " \\$1
.       shift
.   \}
.   if d N-jr .as N-firstname ", \\*[N-jr]
.	idx:do N \\*[N-firstname]
.	idx:print
..
.de N>
.	idx:par
.	ie \\n(.$=1 .var:print \\*C\\$1\\*R:
.	el .var:print \\*C\\$1\\*R
.	shift
.	while \\n(.$>1 \{\
.		var:print \\$1
.		shift
.	\}
.	if \\n(.$ .var:print \\$1:
.	var:print \\*(<P.
..
.\""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
.\" Links
.nr idx-keyexist 0
.de idx:keytest
.	\" Test if key exist
.	nr idx-keyexist 0
.	lds idx-newkey \\$1
.	shift
.	while \\n(.$ \{\
.		if "\\*[idx-newkey]"\\$1" \{\
.			nr idx-keyexist 1
.			break
.		\}
.		shift
.	\}
..
.de idx:putkeyword
.	\" insert keyword to link
.	if d idx-list .idx:keytest \\$1 \\*[idx-list]
.	if \\n[idx-keyexist]=0 \{\
.		as idx-list \\$1 \"
.		nr idx-K\\$1 \\n% \" if no break before link
.		de idx:K\\$1
.			\" Trap to get page number
.			nr idx-K\\$1 \\\\n%
\\..
.		\" Print link and text
.		var:print \\P[idx:K\\$1]\A'\\$1'\\c
.		idx:print
.	\}
..
.de LK
.	\" User macro to insert keyword to link
.	idx:putkeyword \\$1
.	if \\n[idx-keyexist] \
.	if \\n(RH .var:tm \\*[lang-keyexist \\$1]]
..
.de LL
.	\" Link to a defined keyword
.	lds idx-note
.	if r idx-K\\$1 .if \\n[note-in]=0 .lds idx-note \\**
.	if \\n[idx-args]=1 \
.	var:print \T'\\$*'\\*[idx-text]\T\\*[idx-note]
.	if \\n[idx-args]=2 \
.	var:print \T'\\$*'\\*[idx-text]\T\\*[idx-note]\
\\*[idx-end]
.	if \\n[idx-args]=3 \
.	var:print \\*[idx-beg]\T'\\$*'\\*[idx-text]\T\
\\*[idx-note]\\*[idx-end]
.	rm idx-text
.	rm idx-beg
.	rm idx-end
.	nr idx-args 0
.	ie r idx-K\\$1 \{\
.		ie \\n[note-in]=0 \{\
.			NS
.			var:print \
\T'\\$1'\\*[lang-See] \\*[lang-p]\~\\n[idx-K\\$1].\T
.			NE
.		\}
.		el .var:print \
\T'\\$1'\\*[lang-See] \\*[lang-p]\~\\n[idx-K\\$1].\T
.	\}
.	el .if \\n(RH .var:tm \\*[lang-wait] \\$0 \\$1
..
.de LM
.	\" email
.	ie \\n[note-in]=0 .lds idx-note \\**
.	el .lds idx-note
.	if \\n[idx-args]=1 \
.	var:print \W'mailto:\\$1'\\*[idx-text]\W\\*[idx-note]
.	if \\n[idx-args]=2 \
.	var:print \W'mailto:\\$1'\\*[idx-text]\W\\*[idx-note]\\*[idx-end]
.	if \\n[idx-args]=3 \
.	var:print \\*[idx-beg]\W'mailto:\\$1'\\*[idx-text]\W\
\\*[idx-note]\\*[idx-end]
.	ie \\n[note-in]=0 \{\
.		NS
.		var:print \W'mailto:\\$1'\\$1\W
.		NE
.	\}
.	\" if inside a note, print url only if there's nothing
.	\" else  text to print
.	el .if \\n[idx-args]=0 .var:print \W'mailto:\\$1'\\$1\W
.	rm idx-text
.	rm idx-beg
.	rm idx-end
.	nr idx-args 0
..
.de LU
.	\" url
.	ie \\n[note-in]=0 .lds idx-note \\**
.	el .lds idx-note
.	if \\n[idx-args]=1 \
.	var:print \W'\\$1'\\*[idx-text]\W\\*[idx-note]
.	if \\n[idx-args]=2 \
.	var:print \W'\\$1'\\*[idx-text]\W\\*[idx-note]\\*[idx-end]
.	if \\n[idx-args]=3 \
.	var:print \\*[idx-beg]\W'\\$1'\\*[idx-text]\W\
\\*[idx-note]\\*[idx-end]
.	ie \\n[note-in]=0 \{\
.		NS
.		var:print <\\W'\\$1'\\$1\\W>
.		NE
.	\}
.	\" if inside a note, print url only if there's nothing
.	\" else  text to print
.	el .if \\n[idx-args]=0 .var:print <\\W'\\$1'\\$1\\W>
.	rm idx-text
.	rm idx-beg
.	rm idx-end
.	nr idx-args 0
..
.\""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
.\" Record links for next pass
.de idx:out
.	\" output recorded links in file for next pass
.	\" $1 = idx-list : list of keywords
.	open idx-out \\*[data-file]-idx.tr
.	while \\n(.$ \{\
.		write idx-out .nr idx-K\\$1 \\n[idx-K\\$1]
.		shift
.	\}
.	close idx-out
..
.de idx:input
.	\" insert summary from previous pass
.	\" Create file in case it doesn't exist
.	opena idx-in \\*[data-file]-idx.tr
.	close idx-in
.	\" delete EOF = \004 in octal = ^D in vim
.	pso tr -d '\\\\004' < \\*[data-file]-idx.tr
.	\"so \\*[data-file]-idx.tr
..
.am doc:end
.	if d idx-list .idx:out \\*[idx-list]
..
.idx:input
