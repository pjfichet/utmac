Font description:
	f- Bold Italic Form
	f-000 roman
	f-100 bold
	f-010 italic
	f-001 small capitals
	f-002 acronyms
	f-003 superscripts
	f-004 inferior
	f-005 final glyphs
	f-006 monospace
..
.nr data-u-libertine 1
.\""""""""""""""""""""""""""""
.\" Mount fonts for text
.\"
.\"	ex: fp 11 f-000 LinLibertine_R otf
.\" (start at 11 since position 9 and 10 are reserved)
.
.nr z 10 1
.de font:mount
.	\" $1: bold and italic numbers
.	\" $2: name of font
.
.	\" 0: Default
.	fp \\n+z f-\\$10 \\$2 otf
.	\" 1: small caps
.	fp \\n+z f-\\$11 \\$2 otf
.	feature f-\\$11 +smcp +lnum
.	fdeferlig f-\\$11 ff fi fl ft ffi ffl fft
.	\" 2: acronyms
.	fp \\n+z f-\\$12 \\$2 otf
.	feature f-\\$12 +c2sc +smcp +lnum
.	fdeferlig f-\\$12 ff fi fl ft ffi ffl fft
.	\" 3: superscripts
.	fp \\n+z f-\\$13 \\$2 otf
.	feature f-\\$13 +sups
.	fdeferlig f-\\$13 ff fi fl ft ffi ffl fft
.	\" 4: inferior
.	fp \\n+z f-\\$14 \\$2 otf
.	feature f-\\$14 +sinf
.	fdeferlig f-\\$14 ff fi fl ft ffi ffl fft
..
.font:mount 00 LinLibertine_R
.	flig f-000 ct \[c_t] st \[s_t] \"sp \[s_p]
.	flig f-000 fb \[f_b] \"ffb \[f_f_b]
.	flig f-000 ff \[f_f] fh \[f_h] ffh \[f_f_h]
.	flig f-000 fi \[fi] ffi \[f_f_i]
.	flig f-000 fj \[f_j] ffj \[f_f_j] fk \[f_k]
.	flig f-000 ffk \[f_f_k] fl \[fl]
.	flig f-000 ffl \[f_f_l] ft \[f_t] fft \[f_f_t] Th \[T_h]
.	flig f-000 ck \[c_k] ch \[c_h] tt \[t_t]
.font:mount 01 LinLibertine_RI
.	flig f-010 ct \[c_t] st \[s_t]
.	flig f-010 ff \[f_f] fh \[f_h]
.	flig f-010 fi \[fi] ffi \[f_f_i]
.	flig f-010 fj \[f_j] ffj \[f_f_j] fk \[f_k]
.	flig f-010 fl \[fl] ffl \[f_f_l] ft \[f_t]
.	flig f-010 Th \[T_h] ck \[c_k] ch \[c_h] tt \[t_t]
.font:mount 10 LinLibertine_RB
.	flig f-100 ct \[c_t] st \[s_t] ff \[f_f]
.	flig f-100 fi \[fi] ffi \[f_f_i] fj \[f_j]
.	flig f-100 fl \[fl] ffl \[f_f_l] ft \[f_t] Th \[T_h]
.font:mount 11 LinLibertine_RBI
.	flig f-110 ct \[c_t] ff \[f_f] fi \[fi]
.	flig f-110 ft \[f_t] Th \[T_h]
.	flig f-110 ck \[c_k] ch \[c_h] tt \[t_t]
.\" 6 monospace
.fp \n+z f-006 LinLibertine_M otf
.fdeferlig f-006 ff fi fl ft ffi ffl fft
.rr z
.rm font:mount
.
