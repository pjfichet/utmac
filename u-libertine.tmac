.\"""""""""""""""""""""""""""""""""""""""""""""""
.\" Font macros
.
.de font:reset
.	nr f-b 0
.	nr f-i 0
.	nr f-f 0
.	nr font-bold0 \\$1
.	nr font-bold1 \\$2
.	nr font-ital0 \\$3
.	nr font-ital1 \\$4
.	ft f-\\$1\\$3\\$5
.	lang:char
..
.de font:text
.	\" Roman Bold Roman Italic Noform
.	font:reset 0 1 0 1 0
..
.de font:note
.	\" Roman Bold Roman Italic Noform
.	font:reset 0 1 0 1 0
..
.de font:note-it
.	\" Roman Bold Italic Roman Noform
.	font:reset 0 1 1 0 0
..
.de font:head
.	\" Bold Bold Italic Roman Noform
.	font:reset 1 1 1 0 0
..
.de font:subhead
.	\" Bold Bold Italic Roman Noform
.	font:reset 1 1 1 0 0
..
.de font:endhead
.	font:text
..
.de font:code
.	\" Roman Roman Roman Roman Monospace
.	font:reset 0 0 0 0 6
.	nr f-f 6
.	lang:rchar
..
.\"""""""""""""""""""""""""""""""""""""""""""""""
.\" Fonts Strings
.
.ds font-orn \[uniE002]
.ds f-l f-\\n[font-bold\\n[f-b]]\
\\n[font-ital\\n[f-i]]\
\\n[f-f]
.ds B \ER'f-b 1-\En[f-b]'\f[\E*[f-l]]
.ds I \ER'f-i 1-\En[f-i]'\f[\E*[f-l]]
.ds C \ER'f-f 1-\En[f-f]'\f[\E*[f-l]]
.ds A \ER'f-f 2-\En[f-f]'\f[\E*[f-l]]
.ds U \ER'f-f 3-\En[f-f]'\f[\E*[f-l]]
.ds L \ER'f-f 4-\En[f-f]'\f[\E*[f-l]]
.ds F
.ds M \ER'f-f 6-\En[f-f]'\f[\E*[f-l]]
