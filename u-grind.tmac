.\""""""""""""""""""""""""""""""""""""""
.\" Vgrind
.de vS
.	br
.	ev ev-code
.	nr ev-code 1
.	par:init
.	sp 1v
.	nr code-top \\n(nl
.	ds code-name \\$1
.	nf
.	in 3v
.	font:code
..
.de vE
.	br
.	code:line
.	ev
.	rr ev-code
.	par:init
.	font:text
.	sp 1v
..
.de code:line
.	br
.	nr code-bot \\n(nl
.	lnr code-line \\n[code-bot]-\\n[code-top]-0.5v
.	sp -1v
.	var:print \h'-1v'\X'SetColor .3 .3 .3 rgb'\
\s+(60\D'l 0 -\\n[code-line]u'\s-(60\X'SetColor black'
.	br
.	rr code-line
.	rr code-bot
.	rr code-top
..
.de code:foot
.	if r ev-code .if r code-top .code:line
..
.	
.de code:init
.	\" reset style code after header
.	if r ev-code \{\
.		font:code
.	nr code-top \\n(nl
.	\}
..
.de vF
.	\" define file name
..
.de vO
.	\" Open a function
..
.de vC
.	\" Close a function
..
.
.\" K keywords, V variables
.\" C comments, S strings
.ds +K \\*B
.ds +V \\*B\X'SetColor blue'
.ds +C \X'SetColor blue'
.ds +S \\*I
.ds -K \\*R
.ds -V \X'SetColor black'\\*P
.ds -C \X'SetColor black'
.ds -S \\*R
.ds e \e
.ds - \-
.ds _ _
.\""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
.\" detr
.ds e \e
.ds -- \(en
.ds *) *
.ds detr \\$*
