.\"""""""""""""""""""""""""""""""""""""
.\" Various macros
.de var:print
\\$*
..
.de var:null
..
.\"""""""""""""""""""""""""""""""""""""
.\" doc
.nr txt-length 65
.de doc:end
'	if d txt:printnote 'txt:printnote
.	pl \\n(nlu
..
.em doc:end
.de txt:conf
.	ll \\n[txt-length]
.	lt \\n[txt-length]
.	na
.	fi
.	nh
'	in 0
.	lpfx
..
.nr txt-PI 0
.nr txt-PX 0
.de txt:break
.	br
.	sp 1v
.	txt:conf
.	if \\n[txt-PI]=1 .nr txt-PI 0
.	if \\n[txt-PX]=1 \{\
.		nr txt-PX 0
.	\}
..
.\"""""""""""""""""""""""""""""""""""""
.\" headings
.de H1
.	txt:break
.	lnr head-width \\n[txt-length] 1
.	lds head-string #
.	while \\n-[head-width] .as head-string #
.	var:print \\*[head-string]
.	br
.	tl '#'\\$*'#'
.	var:print \\*[head-string]
.	sp 1v
..
.de H2
.	txt:break
.	length head-tmp \\$*
.	lnr head-width \\n[head-tmp] 1
.	lds head-string #####
.	while \\n-[head-width] .as head-string #
.	var:print # \\$*
.	br
.	var:print \\*[head-string]
..
.de H3
.	txt:break
.	length head-tmp \\$*
.	lnr head-width \\n[head-tmp] 1
.	lds head-string ===
.	while \\n-[head-width] .as head-string =
.	var:print # \\$*
.	br
.	var:print \\*[head-string]
..
.de H4
.	txt:break
.	length head-tmp \\$*
.	lnr head-width \\n[head-tmp] 1
.	lds head-string ---
.	while \\n-[head-width] .as head-string -
.	var:print # \\$*
.	br
.	var:print \\*[head-string]
..
.\"""""""""""""""""""""""""""""""""""""
.\" paragraphs
.de PB
.	txt:break
.	in 4
.	ti 0
..
.de PP
.	txt:break
..
.de PQ
.	txt:break
.	lpfx \ \ >\ \"
..
.de PI
.	if \\n[txt-PI]=0 \{\
.		txt:break
.		nr txt-PI 1
.	\}
.	txt:conf
.	in 4
.	ti 0
.	ie \\n(.$ .var:print \ \ \\$*
.	el .var:print \ \ - \\$*
..
.de PC
.	txt:break
.	ad c
..
.de PL
.	txt:break
.	ad l
..
.de PR
.	txt:break
.	ad r
..
.de PX
.	txt:break
.	in 4
.	nr txt-PX 1
.	nf
..
.als vS PX
.als vE PP
.\"""""""""""""""""""""""""""""""""""""
.\" notes
.nr txt-note 0 1
.ds * \U'00A0'(\\n+[txt-note])
.nr note-in 0
.de txt:printnote
.	br
.	sp 1v
.	ev note
.	txt:conf
.	if d txt:note .txt:note
.	br
.	ev
.	rm txt:note
..
.de txt:note-start
.	als NE txt:note-stopdiv
.	nr note-in 1
.	ev note
.	br
.	da txt:note
.	br
.	sp 1v
.	txt:conf
.	var:print (\\n[txt-note])
..
.de txt:note-stopdiv
.	nr note-in 0
.	br
.	di
.	ev
..
.de txt:note-stop
.	nr note-in 0
.	PP
..
.als NS txt:note-start
.de NT
.	nr note-in 1
.	als NE txt:note-stop
..
.de NB
.	nr note-in 1
.	als NE txt:note-stop
..
.\""""""""""""""""""""""""""""""""""""""""""""""""
.\" Index macros
.nr idx-args 0
.de LP
.	\" text to print
.	ds idx-text \\$1
.	ds idx-end \\$2
.	ds idx-beg \\$3
.	nr idx-args \\n(.$
..
.de idx:print
.	\" print text defined by .p macro
.	\" $1 before, $2 after
.	if \\n[idx-args]=1 .var:print \\*[idx-text]
.	if \\n[idx-args]=2 .var:print \\*[idx-text]\\*[idx-end]
.	if \\n[idx-args]>2 .var:print \\*[idx-beg]\\*[idx-text]\\*[idx-end]
.	rm idx-text
.	rm idx-beg
.	rm idx-end
.	nr idx-args 0
..
.de idx:url
.	\" url
.	if \\n[idx-args]=0 \{\
.		lang:xmlrchar
.		var:print (\\$1)
.		lang:xmlchar
.	\}
.	if \\n[idx-args]=1 \{\
.		var:print \\*[idx-text]
.		lang:xmlrchar
.		var:print <\\$1>
.		lang:xmlchar
.	\}
.	if \\n[idx-args]=2 \{\
.		var:print \\*[idx-text]
.		lang:xmlrchar
.		var:print <\\$1>\c
.		lang:xmlchar
.		var:print \\*[idx-end]
.	\}
.	if \\n[idx-args]=3 \{\
.		var:print \\*[idx-beg]\\*[idx-text]
.		lang:xmlrchar
.		var:print <\\$1>\c
.		lang:xmlchar
.		var:print \\*[idx-end]
.	\}
.	rm idx-text
.	rm idx-beg
.	rm idx-end
.	nr idx-args 0
..
.als LA idx:print
.als LD idx:print
.als LE idx:print
.als LK var:null
.als LL idx:print
.als LM idx:url
.als LN idx:print
.als LO idx:print
.als LT idx:print
.als LU idx:url
.als LW idx:print
.\"""""""""""""""""""""""""""""""""""""
.\" fonts
.\" define only bold and italic
.de txt:font
.	while \\n(.$ \{\
.		ds \\$1
.		shift
.	\}
..
.txt:font P R B I BI
.txt:font A BA IA BIA
.txt:font C BC IC BIC
.txt:font U BU IU BIU
.txt:font F BF IF BIF
.txt:font +F +L +J
.txt:font -F -L -J
.txt:font +K +V +C +S
.txt:font -K -V -C -S
.ds e \e
.ds -- \(en
.ds *) *
.ds - \-
.ds _ _
